<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#DDF3FF"
    android:orientation="vertical">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    />

    <LinearLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout

            android:layout_width="420dp"
            android:layout_height="153dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageButton

                    android:id="@+id/btn_teacher_title"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="30dp"
                    android:src="@mipmap/qd"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="234dp" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="30dp"

                    android:text="发起签到"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageButton
                    android:id="@+id/ib_task"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:layout_alignLeft="@id/btn_teacher_title"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="25dp"
                    android:layout_weight="0.3"
                    android:src="@mipmap/z"
                    tools:layout_editor_absoluteX="112dp"
                    tools:layout_editor_absoluteY="233dp" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="作业讲评"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageButton

                    android:id="@+id/ib_commonandcommunication"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:layout_alignLeft="@id/ib_commonandcommunication"
                    android:layout_gravity="right"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_weight="0.3"
                    android:src="@mipmap/jilvweichi"
                    tools:layout_editor_absoluteX="213dp"
                    tools:layout_editor_absoluteY="231dp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="纪律维持"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:layout_gravity="center"

            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="107dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ib_kecheng"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="30dp"
                    android:src="@mipmap/qt"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="234dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:text="其他"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageButton
                    android:id="@+id/ib_chengji"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="50dp"
                    android:layout_weight="0.3"
                    android:src="@mipmap/zuoyejiangp"
                    tools:layout_editor_absoluteX="311dp"
                    tools:layout_editor_absoluteY="231dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="课堂互动"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ib_cengji"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="50dp"
                    android:layout_weight="0.3"
                    android:src="@mipmap/cj"
                    tools:layout_editor_absoluteX="311dp"
                    tools:layout_editor_absoluteY="231dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:text="成绩公布"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>