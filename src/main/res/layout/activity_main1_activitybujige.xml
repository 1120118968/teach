        android:textStyle="bold"
        android:text="Name" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Name" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Name" />
